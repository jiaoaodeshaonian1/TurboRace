@import "../../../style/skin.wxss";


.main {
	padding: 20rpx !important;
}

.list {
	width: 100%;
	padding: 0rpx 0rpx;
	display: flex;
	flex-direction: column;
}

.list .item {
	width: 100%;
	display: flex;
	background-color: #fff;
	padding: 20rpx 20rpx;
	overflow: hidden;
	position: relative;
	margin-bottom: 20rpx;
	border-radius: 10rpx;
}

.list .item .left {
	width: 240rpx;
	height: 170rpx;
	border-radius: 14rpx;
	margin-right: 25rpx;
}

.list .item .right {
	flex: 1;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}

.list .item .right .top {
	width: 100%;
	display: flex;
	flex-direction: column;
}

.list .item .right .top .title {
	width: 100%;
	font-size: 28rpx;
	font-weight: bold;
	color: #333;
	margin-bottom: 20rpx;
}

.list .item .right .top .time {
	width: 100%;
	font-size: 26rpx;
	color: #999;
	margin-bottom: 10rpx;
}

.list .item .right .line {
	width: 100%;
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-top: 24rpx;
}

.list .item .right .line .join {
	color: #fff;
	font-size: 24rpx;
	padding: 6rpx 20rpx;
	background-color: #666;
	border-radius: 30rpx;
}

.list .item .right .line .num {
	font-size: 24rpx;
	color: #777;
}