<view wx:if="{{!isLoad}}" class="margin-top load loading text-l load-project"></view>
<block wx:else>

	<cmpt-comm-list type="enroll-list" _params="{{_params}}" search="{{search||''}}" _menus="{{sortMenus}}" _items="{{sortItems}}" sortMenusDefaultIndex="0" route="enroll/list" topBottom="120" isTotalMenu="{{true}}" placeholder="搜索" bind:list="bindCommListCmpt">
		<view class="main">
			<view class="list">
				<view class="item shadow-project" wx:for="{{dataList.list}}" wx:key="key" bindtap="url" data-url="../detail/enroll_detail?id={{item.enrollId}}">
					<image class="left loading" mode="aspectFill" lazy-load="{{true}}" src="{{item.enrollObj.cover[0]}}" />
					<view class="right">
						<view class="top">
							<view class="title content-cut-one">{{item.enrollTitle}}</view>
							<view class="time content-cut-one">{{item.enrollObj.time}}  </view> 
						</view>
						<view class="line">
							<text class="num">{{item.enrollJoinCnt}}人报名</text>
							<view class="join {{item.statusDesc=='报名中'?'bg-project':'bg-grey light'}}">
								{{item.statusDesc}}
							</view>
						</view>
					</view>
				</view>

			</view>
		</view>

		<!--load begin-->
		<import src="../../../../../tpls/public/list_load_tpl.wxml" />
		<template is="listLoadTpl" data="{{skin:'load-project',dataList}}" />
		<!--load end-->

	</cmpt-comm-list> 
 

</block>