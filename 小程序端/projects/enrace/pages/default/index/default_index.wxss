@import "../../../style/skin.wxss";



.main {
	padding: 0rpx 0rpx 100rpx;
}

.up {
	width: 100%;
}

.up image {
	width: 100%;
	box-shadow: 0rpx 15rpx 8px -10rpx rgba(28, 236, 108, 0.4);
}

.down {
	width: 100%;
	box-sizing: border-box;
	padding: 10rpx 16rpx;
	margin-top: -90rpx;
	z-index: 9999;
	position: relative;
}

.menu {
	width: 100%;
	display: flex;
	flex-wrap: wrap;
	background-color: #fff;
	padding: 20rpx 10rpx;
	border-radius: 30rpx;
}

.menu .item {
	width: 25%;
	display: flex;
	align-items: center;
	justify-content: center;
	height: 180rpx;

}

.menu .item .item-inner {
	width: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}

.menu .item-inner .img {
	width: 90rpx;
	height: 90rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	background-color: #f8f8f8;
	border-radius: 30%;
}


.menu .item-inner .img image {
	width: 70rpx;
	height: 70rpx;
}

.menu .item-inner .title {
	font-size: 24rpx;
	color: #333;
	margin-top: 10rpx;
}

.vouch-box {
	padding: 30rpx 20rpx 10rpx;
	background-color: #fff;
	border-radius: 20rpx;
	display: flex;
	flex-direction: column;
}

.vouch-box .title {
	display: flex;
	align-items: center;
	margin-bottom: 20rpx;
}

.vouch-box .title .mark {
	width: 10rpx;
	height: 30rpx;
	background-image: linear-gradient(145deg, #F1724C, #dab95e, #F1724C);
	margin-right: 18rpx;
	border-radius: 10rpx;
}

.vouch-box .title .txt {
	font-size: 28rpx;
	font-weight: bold;
}

.vouch-box .list {
	width: 100%;
	display: flex;
	flex-direction: column;
}

.vouch-box .list .item {
	width: 100%;
	display: flex;
	border-bottom: 2rpx dotted #ccc;
	padding: 16rpx 0;
}

.vouch-box .list .item:last-child {
	border-bottom: 0;
}

.vouch-box .list .item .left {
	flex: 1;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}

.vouch-box .list .item .left .line {
	font-size: 26rpx;
	color: #333;
}

.vouch-box .list .item .left .bottom {
	font-size: 22rpx;
	color: #999;
}

.vouch-box .list .item .right {
	margin-left: 10rpx;
}

.vouch-box .list .item .right>image {
	height: 110rpx;
	width: 160rpx;
	border-radius: 6rpx;
	border-top-left-radius: 30rpx;
	border-bottom-right-radius: 30rpx;
}



.pic-box {
	padding: 30rpx 0rpx 30rpx;
	border-radius: 20rpx;
	margin-top: 30rpx;
	display: flex;
	flex-direction: column;
}

.pic-box .title {
	display: flex;
	align-items: center;
	margin-bottom: 20rpx;
}

.pic-box .title .mark {
	width: 10rpx;
	height: 30rpx;
	background-image: linear-gradient(145deg, #F1724C, #dab95e, #F1724C);
	margin-right: 18rpx;
	border-radius: 10rpx;
}

.pic-box .title .txt {
	font-size: 28rpx;
	font-weight: bold;
}

.pic-box .list {
	width: 100%;
	display: flex;
	flex-direction: column;
}

.pic-box .list .item {
	width: 100%;
	display: flex;
	flex-direction: column;
	padding: 0rpx 0 16rpx;
	overflow: hidden;
	margin-bottom: 30rpx;
	border-radius: 20rpx;
	background-color: #fff;
}

.pic-box .list .item .line1 {
	width: 100%;
	overflow: hidden;
}

.pic-box .list .item .line1>image {
	width: 100%;
	height: 300rpx;
	border-top-left-radius: 20rpx;
	border-top-right-radius: 20rpx;
	border-bottom: 4rpx solid var(--projectCompareColor);
}

.pic-box .list .item .line2 {
	width: 100%;
	font-size: 28rpx;
	color: #333;
	padding: 10rpx 0rpx;
}

.pic-box .list .item .line3 {
	width: 100%;
	font-size: 22rpx;
	color: #999;
	padding: 0rpx 10rpx;
}